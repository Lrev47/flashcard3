<style>
    /* You can choose any Google Font or custom font you like */
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap');
  
    body {
      font-family: 'Poppins', sans-serif;
      /* Just to see the card in context, let's give the body a background. */
      background: #f6f9fc;
      margin: 20px;
    }
  
    .card-front {
      width: 2.25in;
      height: 3.5in;
      border: 3px solid #ff6f91; /* Thicker and more colorful border */
      border-radius: 10px;
      box-sizing: border-box;
      position: relative;
      padding: 0.5rem;
      margin: 0.5rem;
      background: linear-gradient(135deg, #ffa69e, #861657);
      color: #ffffff;
      /* Add a drop shadow for emphasis */
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
      /* Subtle 3D effect on hover */
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
  
    .qr-code-area {
      width: 0.9in;
      height: 0.9in;
      margin: 0.25rem auto 0.5rem;
      border: 2px dashed #ffffff;
      border-radius: 8px;
      display: flex;
      justify-content: center;
      align-items: center;
      background: rgba(255,255,255,0.2);

    }
  
    
  
    .qr-code-area img {
      max-width: 100%;
      max-height: 100%;
      border-radius: 4px;
    }
  
    .card-question {
      text-align: center;
      font-size: 1.1rem;
      font-weight: 600;
      width: 1.8in;
      margin: 0.5rem auto;
      padding: 0.25rem;
      background: rgba(255,255,255,0.2);
      border-radius: 4px;
      /* Make the text stand out */
      text-shadow: 1px 1px 2px rgba(0,0,0,0.4);
    }
  
    .bottom-info {
      position: absolute;
      bottom: 0.5rem;
      left: 0;
      right: 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 0.5rem;
      font-weight: bold;
    }
  
    .bottom-info span {
      flex: 1;
      padding: 0.15rem;
      border-radius: 4px;
    }
  
    /* Difficulty classes */
    .easy {
      color: #c8ffb0;
      background: rgba(0, 128, 0, 0.3); /* Light green background */
    }
  
    .medium {
      color: #ffd380;
      background: rgba(255, 165, 0, 0.3); /* Light orange background */
    }
  
    .hard {
      color: #ffb0b0;
      background: rgba(255, 0, 0, 0.3); /* Light red background */
    }
  
    /* Alignment helpers */
    .difficulty-left {
      text-align: left;
    }
  
    .topic-center {
      text-align: center;
      color: #fff; /* White text for contrast */
      background: rgba(0, 0, 0, 0.2);
    }
  
    .author-right {
      text-align: right;
      color: #fff;
      background: rgba(0, 0, 0, 0.2);
    }
  </style>
  
  <div class="card-front">
    <div class="qr-code-area">
      <% if (card.qrCodeUrl) { %>
        <img
          src="<%= card.qrCodeUrl %>"
          alt="QR Code"
        />
      <% } else { %>
        <span style="color: #fff;">No QR</span>
      <% } %>
    </div>
  
    <h2 class="card-question"><%= card.question %></h2>
  
    <% 
      let difficultySymbol = '';
      let difficultyClass = '';
      switch (card.difficulty) {
        case 'EASY':
          difficultySymbol = 'E';
          difficultyClass = 'easy';
          break;
        case 'MEDIUM':
          difficultySymbol = 'M';
          difficultyClass = 'medium';
          break;
        case 'HARD':
          difficultySymbol = 'H';
          difficultyClass = 'hard';
          break;
        default:
          difficultySymbol = '?';
          difficultyClass = '';
      }
    %>
  
    <div class="bottom-info">
      <span class="difficulty-left <%= difficultyClass %>">
        <%= difficultySymbol %>
      </span>
      
      <span class="topic-center">
        <%= parentTopicName %>
      </span>
      
      <span class="author-right">
        <%= card.authorName %>
      </span>
    </div>
  </div>
  