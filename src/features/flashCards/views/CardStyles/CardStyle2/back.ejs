<style>
    /* You can choose any Google Font or custom font you like */
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap');
  
    .card-back {
      width: 2.25in;
      height: 3.5in;
      border: 3px solid #ff6f91; /* Thicker and more colorful border */
      border-radius: 10px;
      box-sizing: border-box;
      position: relative;
      padding: 0.5rem;
      margin: 0.5rem;
      overflow: hidden;
  
      /* Match the colorful gradient used on the front */
      background: linear-gradient(135deg, #ffa69e, #861657);
      color: #ffffff;
  
      /* Drop shadow for emphasis */
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
      font-family: 'Poppins', sans-serif;
    }
  
    .scalable-content {
      font-size: 1rem;
      line-height: 1.4;
      /* Optional subtle background layer on content */
      background: rgba(255, 255, 255, 0.2);
      padding: 0.5rem;
      border-radius: 8px;
      height: 100%;
      box-sizing: border-box;
    }
  
    .scalable-content .card-answer {
      margin-top: 0.2in;
      text-align: center;
      display: block;
      font-weight: 600;
      /* Text shadow for legibility on gradient */
      text-shadow: 1px 1px 2px rgba(0,0,0,0.4);
    }
  
    .scalable-content .code-snippet {
      border-radius: 4px;
      overflow: hidden;
      margin: 1rem 0;
      /* Slight background for code blocks */
      background: rgba(0, 0, 0, 0.2);
    }
  
    .scalable-content .code-snippet code {
      display: block;
      white-space: pre-wrap;
      word-break: break-word;
      margin: 0;
      padding: 0.5rem;
      font-family: 'Courier New', monospace;
      color: #fff;
    }
  
    .scalable-content .diagram-img {
      display: block;
      margin: 1rem auto 0;
      max-width: 100%;
      max-height: calc(3.5in - 2rem);
      border-radius: 8px;
      border: 2px dashed #ffffff;
      background: rgba(255, 255, 255, 0.2);
    }
  
    .scalable-content .diagram-img:hover {
      background: rgba(255, 255, 255, 0.3);
    }
  </style>
  
  <div class="card-back">
    <div class="scalable-content">
      <h3 class="card-answer"><%= card.answer %></h3>
  
      <% if (card.answerType === 'CODE_SNIPPET' && card.examples && card.examples.code) { %>
        <pre class="code-snippet">
          <code class="<%= card.examples.language ? `language-${card.examples.language}` : '' %>">
  <%= card.examples.code %>
          </code>
        </pre>
      <% } else if (card.answerType === 'DIAGRAM' && card.examples && card.examples.diagramUrl) { %>
        <img
          class="diagram-img"
          src="<%= card.examples.diagramUrl %>"
          alt="Diagram"
        />
      <% } %>
    </div>
  </div>
  