<style>
    .card-front {
      width: 2.25in;
      height: 3.5in;
      border: 1px solid #000;
      border-radius: 6px;
      box-sizing: border-box;
      position: relative;
      padding: 0.5rem;
      margin: 0.5rem;
    }
  
    .card-front .qr-code-area {
      width: 0.8in;
      height: 0.8in;
      margin: 0 auto 0.5rem;
      border: 1px dashed #888;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  
    .card-front .card-question {
      text-align: center;
      font-size: 1.1rem;
      width: 1.5in;
      margin: 2rem;
    }
  
    .card-front .bottom-info {
      position: absolute;
      bottom: 0.5rem;
      left: 0;
      right: 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 0.5rem;
    }
  
    .bottom-info span {
      flex: 1;
    }
    .difficulty-left {
      text-align: left;
    }
    .topic-center {
      text-align: center;
    }
    .author-right {
      text-align: right;
    }
    .easy { color: green; font-weight: bold; }
    .medium { color: orange; font-weight: bold; }
    .hard { color: red; font-weight: bold; }
  </style>
  
  <div class="card-front">
    <div class="qr-code-area">
      <% if (card.qrCodeUrl) { %>
        <img
          src="<%= card.qrCodeUrl %>"
          alt="QR Code"
          style="max-width: 100%; max-height: 100%;"
        />
      <% } else { %>
        <span>No QR</span>
      <% } %>
    </div>
  
    <h2 class="card-question"><%= card.question %></h2>
  
    <% 
      let difficultySymbol = '';
      let difficultyClass = '';
      switch (card.difficulty) {
        case 'EASY':
          difficultySymbol = 'E';
          difficultyClass = 'easy';
          break;
        case 'MEDIUM':
          difficultySymbol = 'M';
          difficultyClass = 'medium';
          break;
        case 'HARD':
          difficultySymbol = 'H';
          difficultyClass = 'hard';
          break;
        default:
          difficultySymbol = '?';
          difficultyClass = '';
      }
    %>
  
    <div class="bottom-info">
      <span class="difficulty-left <%= difficultyClass %>">
        <%= difficultySymbol %>
      </span>
      
      <span class="topic-center">
        <%= parentTopicName %>
      </span>
      
      <span class="author-right">
        <%= card.authorName %>
      </span>
    </div>
  </div>
  