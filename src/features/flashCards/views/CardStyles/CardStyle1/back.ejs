<style>
    .card-back {
      width: 2.25in;
      height: 3.5in;
      border: 1px solid #000;
      border-radius: 6px;
      box-sizing: border-box;
      position: relative;
      padding: 0.5rem;
      margin: 0.5rem;
      overflow: hidden;
    }
  
    .scalable-content {
      font-size: 1rem;
      line-height: 1.4;
    }
  
    .scalable-content .card-answer {
      margin-top: 0.2in;
      text-align: center;
      display: block;
    }
  
    .scalable-content .code-snippet {
      border-radius: 4px;
      overflow: hidden;
    }
  
    .scalable-content .code-snippet code {
      display: block;
      white-space: pre-wrap;
      word-break: break-word;
      margin: 0;
      padding: 0.5rem;
      border-radius: 4px;
    }
  
    .scalable-content .diagram-img {
      display: block;
      margin: 1rem auto 0;
      max-width: 100%;
      max-height: calc(3.5in - 2rem);
    }
  </style>
  
  <div class="card-back">
    <div class="scalable-content">
      <h3 class="card-answer"><%= card.answer %></h3>
  
      <% if (card.answerType === 'CODE_SNIPPET' && card.examples && card.examples.code) { %>
        <pre class="code-snippet">
          <code class="<%= card.examples.language ? `language-${card.examples.language}` : '' %>">
  <%= card.examples.code %>
          </code>
        </pre>
      <% } else if (card.answerType === 'DIAGRAM' && card.examples && card.examples.diagramUrl) { %>
        <img
          class="diagram-img"
          src="<%= card.examples.diagramUrl %>"
          alt="Diagram"
        />
      <% } %>
    </div>
  </div>
  