<!-- src/features/flashCards/newtemp/cards/verticalBaseballCard.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>Landscape Baseball Card View</title>

  <!-- If you need highlight.js theme -->
  <% if (typeof themeCSS === 'string') { %>
    <style><%- themeCSS %></style>
  <% } %>

  <style>
    /*
      Demo container to place front/back side by side,
      oriented horizontally (landscape).
    */
    .card1-landscape-container {
      display: flex;
      justify-content: space-around;
      align-items: flex-start;
      margin: 2rem auto;
      width: 90%;
    }

    /*
      Card now has standard baseball card dimensions in landscape:
      3.5in wide x 2.5in tall.
    */
    .front-wrapper-landscape,
    .back-wrapper-landscape {
      width: 3.5in;
      height: 2.5in;
      margin: 0 1rem;
      border: 1px solid #999;
      overflow: hidden;
      position: relative;
      box-sizing: border-box;
    }
  </style>
</head>
<body>
  <div class="card1-landscape-container">
    <div class="front-wrapper-landscape">
      <%- include('./front.ejs', {
        card,
        deckName,
        highlightCode
      }) %>
    </div>
    <div class="back-wrapper-landscape">
      <%- include('./back.ejs', {
        card,
        deckName,
        highlightCode
      }) %>
    </div>
  </div>
</body>
</html>
