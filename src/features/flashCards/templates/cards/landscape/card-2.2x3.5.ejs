<!-- src/features/flashCards/newtemp/cards/vertical/businessCard.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>businessCard Landscape View</title>

  <!-- If you need highlight.js theme -->
  <% if (typeof themeCSS === 'string') { %>
    <style><%- themeCSS %></style>
  <% } %>

  <style>
    /*
      Demo container so you can see front/back side by side
      but now oriented horizontally (landscape).
    */
    .card1-landscape-container {
      display: flex;
      justify-content: space-around;
      align-items: flex-start;
      margin: 2rem auto;
      width: 90%;
    }

    /*
      Card is now 3.5in wide x 2.2in tall,
      to achieve a landscape orientation.
    */
    .front-wrapper-landscape,
    .back-wrapper-landscape {
      width: 3.5in;
      height: 2.2in;
      margin: 0 1rem;
      border: 1px solid #999;
      overflow: hidden;
      position: relative;
      box-sizing: border-box;
    }
  </style>
</head>
<body>
  <div class="card1-landscape-container">
    <div class="front-wrapper-landscape">
      <%- include('./front.ejs', {
        card,
        deckName,
        highlightCode
      }) %>
    </div>
    <div class="back-wrapper-landscape">
      <%- include('./back.ejs', {
        card,
        deckName,
        highlightCode
      }) %>
    </div>
  </div>
</body>
</html>
