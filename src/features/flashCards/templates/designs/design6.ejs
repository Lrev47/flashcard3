<style>
    /* Bold, modern gradient design */
  
    .card-front,
    .card-back {
      width: 100%;
      height: 100%;
      box-sizing: border-box;
      padding: 5%;
      position: relative;
      font-family: "Arial Black", Gadget, sans-serif;
      color: #ffffff; /* white text for contrast */
      /* Vibrant diagonal gradient: bright orange to purple */
      background: linear-gradient(135deg, #FF5722 0%, #9C27B0 100%);
    }
  
    .card-front {
      /* Thicker border in a bright accent color, e.g. lime green */
      border: 4px solid #a8ff00;
      border-radius: 8px;
    }
    .card-back {
      /* Variation in the gradient might be reversed or a different angle */
      background: linear-gradient(135deg, #FF9800 0%, #8E24AA 100%);
      border: 4px solid #a8ff00;
      border-radius: 8px;
    }
  
    /* QR code: big, bold dashed accent border */
    .qr-code-area {
      width: 30%;
      aspect-ratio: 1 / 1;
      margin: 0 auto 5%;
      border: 2px dashed #00fffa; /* bright cyan for extra pop */
      display: flex;
      justify-content: center;
      align-items: center;
      box-sizing: border-box;
      font-size: 0.8em;
      color: #ffffff;
    }
  
    .card-question {
      text-align: center;
      font-size: 1.4em;
      margin-top: 10%;
      text-transform: uppercase;
      /* subtle black shadow for clarity on gradient */
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.4);
    }
  
    .bottom-info {
      position: absolute;
      left: 0; right: 0; bottom: 5%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 1em;
      font-weight: bold;
      text-transform: uppercase;
    }
    .topic-center {
      text-align: center;
      flex: 1;
    }
    .author-right {
      text-align: right;
      flex: 1;
    }
  
    /* Back content: also big, bold text, with slight shadow for easy reading */
    .scalable-content {
      font-size: 1.1em;
      line-height: 1.3;
      text-shadow: 2px 2px 3px rgba(0, 0, 0, 0.4);
    }
    .card-answer {
      margin-top: 5%;
      text-align: center;
      font-size: 1.4em;
      font-weight: 900;
      text-transform: uppercase;
    }
    .card-example {
      text-align: center;
      margin-top: 4%;
      font-size: 1em;
      color: #e0e0e0;
    }
  
    /* Ensure gradient + colors print correctly */
    @media print {
      .card-front, .card-back {
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
      }
    }
  </style>
  
  <% if (side === 'front') { %>
    <div class="card-front">
      <div class="qr-code-area">QR</div>
      <h2 class="card-question">Vibrant Q</h2>
      <div class="bottom-info">
        <span class="topic-center">Gradient Topic</span>
        <span class="author-right">By Bold User</span>
      </div>
    </div>
  <% } else { %>
    <div class="card-back">
      <div class="scalable-content">
        <h3 class="card-answer">Vibrant A</h3>
        <p class="card-example">Sample Explanation</p>
      </div>
    </div>
  <% } %>
  