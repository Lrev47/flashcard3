<style>
    /* Bold & Vibrant design: strong background color, high-contrast text */
  
    .card-front {
      width: 100%;
      height: 100%;
      box-sizing: border-box;
      padding: 5%;
      position: relative;
      font-family: "Impact", "Arial Black", sans-serif;
      color: #fff; /* White text for contrast on bold backgrounds */
      background-color: #006c6c; /* default background for front */
      /* Extra thick border in a complementary color */
      border: 4px solid #ffcc00;
      border-radius: 8px;
    }
  
    .qr-code-area {
      width: 30%;
      aspect-ratio: 1 / 1;
      margin: 0 auto 5%;
      /* Use a bright accent for the dashed border */
      border: 2px dashed #ff0080;
      display: flex;
      justify-content: center;
      align-items: center;
      box-sizing: border-box;
      font-size: 0.8em;
    }
    .qr-code-area img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
    }
  
    .card-question {
      text-align: center;
      font-size: 1.4em;
      margin-top: 10%;
      text-transform: uppercase;
      /* Slight text shadow for extra pop */
      text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
    }
  
    /*
      Bottom Info area:
      - If authorName is null: center deckName
      - If authorName exists: deckName left, author right
    */
    .bottom-info {
      position: absolute;
      left: 0;
      right: 0;
      bottom: 5%;
      display: flex;
      align-items: center;
      font-size: 1em;
      font-weight: bold;
      text-transform: uppercase;
      /* Allow wrapping if text is long */
      white-space: pre-wrap;
      word-wrap: break-word;
      overflow-wrap: break-word;
      padding: 0 1em; /* for left/right spacing inside the card */
    }
    .bottom-info.center-only {
      justify-content: center;
    }
    .bottom-info.with-author {
      justify-content: space-between;
    }
  
    .deck-name,
    .author-name {
      max-width: 45%;
      text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
    }
  
    @media print {
      .card-front {
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
      }
    }
  </style>
  
  <!-- FRONT SIDE -->
  <div class="card-front">
  
    <!-- QR Code -->
    <div class="qr-code-area">
      <% if (card && card.qrCodeUrl) { %>
        <img src="<%= card.qrCodeUrl %>" alt="QR Code" />
      <% } else { %>
        No QR Code
      <% } %>
    </div>
  
    <!-- QUESTION -->
    <h2 class="card-question">
      <%= card && card.question ? card.question : 'No question provided' %>
    </h2>
  
    <!-- Bottom Info: deck/author conditional display -->
    <div
      class="bottom-info 
      <%= (card && card.authorName) ? 'with-author' : 'center-only' %>"
    >
      <% if (card && card.authorName) { %>
        <span class="deck-name"><%= deckName %></span>
        <span class="author-name"><%= card.authorName %></span>
      <% } else { %>
        <span class="deck-name"><%= deckName %></span>
      <% } %>
    </div>
  
  </div>
  