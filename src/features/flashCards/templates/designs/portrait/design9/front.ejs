<style>
    /*
      Fractal Neon Dream (front side):
        - multiple layered neon gradients
        - intense fractal patterns
        - huge text shadows
        - wild color combos
    */
  
    /* Front container */
    .extreme9-front {
      width: 100%;
      height: 100%;
      box-sizing: border-box;
      padding: 5%;
      position: relative;
  
      /* We'll layer multiple backgrounds to simulate fractal chaos */
      background:
        radial-gradient(circle at 10% 20%, rgba(255,0,255,0.2), transparent 60%),
        radial-gradient(circle at 80% 80%, rgba(0,255,255,0.2), transparent 60%),
        linear-gradient(135deg, #ff00ff 0%, #00ffff 50%, #ffea00 100%);
      background-blend-mode: screen;
  
      font-family: "Impact", "Arial Black", sans-serif;
      color: #0fff0f; /* bright lime text */
      text-shadow: 
        1px 1px 2px #000,
        0 0 5px #ff0, /* neon glow */
        0 0 10px #0f0;
      border: 5px solid #ff0080;
  
      /* A wavy clip-path for more "extreme" flair */
      clip-path: polygon(0 5%, 5% 0, 95% 0, 100% 5%, 100% 95%, 95% 100%, 5% 100%, 0 95%);
    }
  
    /* Decor corner frames using pseudo-element (front side only) */
    .extreme9-front::before {
      content: "";
      position: absolute;
      top: 0; left: 0;
      width: 100%; height: 100%;
      pointer-events: none;
      border: 10px dotted #ff0080;
      box-sizing: border-box;
      /* repeating conic gradient for patterns */
      background: repeating-conic-gradient(
        from 45deg,
        rgba(0,255,255,0.1) 0% 10%,
        transparent 10% 20%
      ) 50%/ 10px 10px;
      mix-blend-mode: hard-light;
    }
  
    /* QR code */
    .extreme9-qr {
      width: 40%;
      aspect-ratio: 1 / 1;
      margin: 0 auto 5%;
      border: 3px dashed #00ff00;
      display: flex;
      justify-content: center;
      align-items: center;
      box-sizing: border-box;
      font-size: 1em;
      color: #00ff00;
      text-shadow:
        0 0 2px #000,
        0 0 4px #0f0;
    }
    .extreme9-qr img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
    }
  
    /* Question text on the front */
    .extreme9-question {
      text-align: center;
      font-size: 1.6em;
      margin-top: 10%;
      text-transform: uppercase;
      /* additional text shadows for more glow */
      text-shadow:
        2px 2px 2px #000,
        0 0 5px #ff0,
        0 0 10px #0ff,
        0 0 15px #f0f;
    }
  
    /*
      Bottom Info area:
      - If authorName is null: center deckName
      - If authorName exists: deckName left, authorName right
    */
    .extreme9-bottom {
      position: absolute;
      left: 0;
      right: 0;
      bottom: 5%;
      display: flex;
      align-items: center;
      font-size: 1em;
      font-weight: bold;
      padding: 0 1em; /* space inside the card sides */
      /* Allow wrapping for long text */
      white-space: pre-wrap;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
    .extreme9-bottom.center-only {
      justify-content: center;
    }
    .extreme9-bottom.with-author {
      justify-content: space-between;
    }
  
    .extreme9-topic,
    .extreme9-author {
      max-width: 45%;
    }
  
    @media print {
      .extreme9-front {
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
      }
    }
  </style>
  
  <!-- FRONT SIDE -->
  <div class="extreme9-front">
  
    <!-- QR Code -->
    <div class="extreme9-qr">
      <% if (card && card.qrCodeUrl) { %>
        <img src="<%= card.qrCodeUrl %>" alt="QR Code" />
      <% } else { %>
        No QR Code
      <% } %>
    </div>
  
    <!-- QUESTION -->
    <h2 class="extreme9-question">
      <%= (card && card.question) ? card.question : 'No question provided' %>
    </h2>
  
    <!-- Bottom Info (deck/author) -->
    <div 
      class="extreme9-bottom 
      <%= (card && card.authorName) ? 'with-author' : 'center-only' %>"
    >
      <% if (card && card.authorName) { %>
        <span class="extreme9-topic"><%= deckName %></span>
        <span class="extreme9-author"><%= card.authorName %></span>
      <% } else { %>
        <span class="extreme9-topic"><%= deckName %></span>
      <% } %>
    </div>
  </div>
  